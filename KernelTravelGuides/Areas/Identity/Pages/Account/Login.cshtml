@page
@model LoginModel

@{
    ViewData["Title"] = "Log in Now";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section contact-section" >
    <div class="container">
        <div class="row block-9">
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                     <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                   
                    <br />
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary py-3 px-4 ">Log in</button>
                            <button asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" type="submit"
                               class="btn btn-primary py-3 px-4 ">Register Now</button>
                    </div>
                    <br />
                    <div>
                        <p id="forgot-password" asp-page="./ForgotPassword" type="submit" class="btn btn-primary py-3 px-4 justify-content-end"> Forgot your password?</p>
                     
                        <p id="resend-confirmation" asp-page="./ResendEmailConfirmation" type="submit"
                            class="btn btn-primary py-3 px-4 justify-content-end"> Confirm Your Account </p>
                      
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
                <img src="https://tourism.gov.pk/assets/images/NMBWP.jpg" style="background-size: cover; position: absolute; width: 100%;" />

        </div>
    </div>

</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
