@model IEnumerable<KernelTravelGuides.Models.Messages>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Messages</h1>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">All users Messages</h4>

                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.messages_user_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.messages_content)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.messages_desc)
                                        </th>
                                       
                                        <th>
                                            @Html.DisplayNameFor(model => model.created_at)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
           
      
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.messages_user_name)
                </td>
                <td>
                                                @Html.DisplayFor(modelItem => item.messages_content)
                                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.messages_desc)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
              <td>
                                               
                                                <button type="button" class="btn btn-sm btn-primary" asp-action="Detail" asp-route-id="@item.messages_id">
                                                    <i class="ion-android-book"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.messages_id">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
        </tr>
}
    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->

        </div><!-- end row -->
    </div>
</div>
