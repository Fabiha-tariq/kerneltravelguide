        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.transport_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport_rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
           
