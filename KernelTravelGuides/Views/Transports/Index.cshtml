@model IEnumerable<KernelTravelGuides.Models.Transport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.transport_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport_rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport_status)
