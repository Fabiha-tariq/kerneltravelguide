@model KernelTravelGuides.Models.Transport

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Transport Edit</h1>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Edit Transport</h4>
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="transport_id" />
                            <div class="row">

                                <div class="form-group  col-md-6">
                <label asp-for="transport_name" class="control-label"></label>
                <input asp-for="transport_name" class="form-control" />
                <span asp-validation-for="transport_name" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="transport_number" class="control-label"></label>
                <input asp-for="transport_number" class="form-control" />
                <span asp-validation-for="transport_number" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="transport_price" class="control-label"></label>
                <input asp-for="transport_price" class="form-control" />
                <span asp-validation-for="transport_price" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="transport_rating" class="control-label"></label>
                <input asp-for="transport_rating" class="form-control" />
                <span asp-validation-for="transport_rating" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="transport_desc" class="control-label"></label>
                <textarea asp-for="transport_desc" class="form-control" rows="6" ></textarea>
                <span asp-validation-for="transport_desc" class="text-danger"></span>
            </div>
                                <div class="form-group form-check col-md-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="transport_status" /> @Html.DisplayNameFor(model => model.transport_status)
                </label>
            </div>
                      @*          <div class="form-group col-md-6">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>*@
           
         
                                <div class="form-group col-md-6">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- end col -->

</div><!-- end row -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}