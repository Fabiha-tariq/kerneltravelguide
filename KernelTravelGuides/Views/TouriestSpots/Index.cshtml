@model IEnumerable<KernelTravelGuides.Models.TouriestSpots>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<h1>Countries</h1>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">All Citites</h4>

                        <div class="table-responsive">
                            <form asp-action="Index" method="get">
                                <input type="text" name="searchString" />
                                <input type="submit" value="Search" />
                            </form>
                            <table class="table table-striped mb-0">

                                <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.t_spot_name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.t_spot_rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_spot_img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_spot_img2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_spot_img3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_spot_status)
            </th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.t_spot_name)
            </td>
           
            <td>
                
                                                @if (item.t_spot_rating == 5)
                                                {
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                }
                                                else if (item.t_spot_rating == 4)
                                                {
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                }
                                                else if (item.t_spot_rating == 3)
                                                {
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                }
                                                else if (item.t_spot_rating == 2)
                                                {
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                }
                                                else
                                                {
                                                    <img src="~/frontend/images/png-clipart-star-star.png" asp-append-version="false" width="20px" />
                                                }

            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.t_spot_img1)*@
                    <a href="@("images/touriestspotsimg/" + item.t_spot_img1)" target="_blank">
                        <img src="@("~/images/touriestspotsimg/" + item.t_spot_img1)" asp-append-version="false" width="64px" />
                    </a>
            </td>

            <td>
                @*@Html.DisplayFor(modelItem => item.t_spot_img2)*@
                    <a href="@("images/touriestspotsimg/" + item.t_spot_img2)" target="_blank">
                        <img src="@("~/images/touriestspotsimg/" + item.t_spot_img2)" asp-append-version="false" width="64px" />
                    </a>
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.t_spot_img3)*@
                    <a href="@("images/touriestspotsimg/" + item.t_spot_img3)" target="_blank">
                        <img src="@("~/images/touriestspotsimg/" + item.t_spot_img3)" asp-append-version="false" width="64px" />
                    </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country.country_name)
            </td>
            <td>
                                                @if (item.t_spot_status)
                                                {
                                                    <span class="btn btn-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="btn btn-danger">Unactive</span>

                                                }
            </td>
            
            <td>
                
                                                <button type="button" class="btn btn-sm btn-warning ">
                                                    <a asp-action="Edit" asp-route-id="@item.t_spot_id" class="text-white ">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </button>

                                                <button type="button" class="btn btn-sm btn-primary">
                                                    <a asp-action="Details" asp-route-id="@item.t_spot_id" class="text-white">
                                                        <i class="ion-android-book"></i>
                                                    </a>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger">
                                                    <a asp-action="Delete" asp-route-id="@item.t_spot_id" class="text-white ">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </button>
            </td>
        </tr>
}
    </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->

        </div><!-- end row -->
    </div>
</div>

