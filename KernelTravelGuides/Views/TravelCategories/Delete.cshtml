@model KernelTravelGuides.Models.TravelCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Travel Category Delete</h1>


<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">


                <div class="card">

                    <div class="card-body">
                        <h2 class="mt-0 header-title">Are you sure you want to delete!!??</h2>

                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.tra_category_name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.tra_category_name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.tra_category_desc)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.tra_category_desc)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.tra_category_status)
                            </dt>
                            <dd class="col-sm-8">
                                @if (Model.tra_category_status)
                                {
                                    <span class="btn btn-success">Active</span>
                                }
                                else
                                {
                                    <span class="btn btn-danger">Unactive</span>

                                }
                            </dd>

                        </dl>


                        <form asp-action="Delete">
                            <input type="hidden" asp-for="tra_category_id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />

                        </form>
                    </div>
                </div>

            </div>
        </div>



    </div>
</div><!-- end col -->

