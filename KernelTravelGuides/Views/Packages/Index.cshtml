@model IEnumerable<KernelTravelGuides.Models.Packages>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Packages</h1>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">All Packages</h4>

                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                              
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.packages_name)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.packages_or_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.packages_img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tra_category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_spot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.packages_status)
            </th>
          
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.packages_name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.packages_or_price)
            </td>
            <td>
                 <a href="@("images/packageimg/" + item.packages_img)" target="_blank">
                <img src="@("~/images/packageimg/" + item.packages_img)" asp-append-version="true" width="64px" />
                  </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts.resorts_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tra_category.tra_category_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.t_spot.t_spot_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transport.transport_name)
            </td>
            <td>
                                                @if (item.packages_status)
                                                {
                                                    <span class="btn btn-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="btn btn-danger">Unactive</span>

                                                }
            </td>
         
          
            <td>
              
                                                <button type="button" class="btn btn-sm btn-warning ">
                                                    <a asp-action="Edit" asp-route-id="@item.packages_id" class="text-white ">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </button>

                                                <button type="button" class="btn btn-sm btn-primary">
                                                    <a asp-action="Details" asp-route-id="@item.packages_id" class="text-white">
                                                        <i class="ion-android-book"></i>
                                                    </a>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger">
                                                    <a asp-action="Delete" asp-route-id="@item.packages_id" class="text-white ">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </button>
            </td>
        </tr>
}
    </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->

        </div><!-- end row -->
    </div>
</div>


