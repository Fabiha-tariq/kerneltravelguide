@model KernelTravelGuides.Models.Resorts

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h1>Resort Edit</h1>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Edit Resorts</h4>
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="resorts_id" />
                            <div class="row">
                               
                                <div class="form-group  col-md-6">
                <label asp-for="resorts_name" class="control-label"></label>
                <input asp-for="resorts_name" class="form-control" />
                <span asp-validation-for="resorts_name" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="resorts_location" class="control-label"></label>
                <input asp-for="resorts_location" class="form-control" />
                <span asp-validation-for="resorts_location" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="resorts_img1" class="control-label"></label>
                                    <input asp-for="main_image1" class="form-control" accept="/images/resortimg/*" />
                                    <span asp-validation-for="main_image1" class="text-danger"></span>
            <br />
                
                                    <input asp-for="main_image2" class="form-control" accept="/images/resortimg/*" />
                                    <span asp-validation-for="main_image2" class="text-danger"></span>
            <br />
                                    <input asp-for="main_image3" class="form-control" accept="/images/resortimg/*" />
                <span asp-validation-for="main_image3" class="text-danger"></span>
            </div>
                                <div class="form-group form-check col-md-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="resorts_status" /> @Html.DisplayNameFor(model => model.resorts_status)
                </label>
            </div>
                    @*            <div class="form-group col-md-6">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>*@

                                <div class="form-group col-md-6">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- end col -->

</div><!-- end row -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}