@model KernelTravelGuides.Models.Resorts

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Resorts Delete</h1>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-img">

                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img1)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />

                                </div>
                                <div class="carousel-item">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img2)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />
                                </div>
                                <div class="carousel-item">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img3)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <h2 class="mt-0 header-title">Are you sure you want to delete!!??</h2>
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.resorts_name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.resorts_name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.resorts_location)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.resorts_location)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.resorts_status)
                            </dt>
                            <dd class="col-sm-8">
                                @if (Model.resorts_status)
                                {
                                    <span class="btn btn-success">Active</span>
                                }
                                else
                                {
                                    <span class="btn btn-danger">Unactive</span>

                                }
                            </dd>

                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="resorts_id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />

                        </form>
                    </div>
                </div>

            </div>
        </div>



    </div>
</div><!-- end col -->
