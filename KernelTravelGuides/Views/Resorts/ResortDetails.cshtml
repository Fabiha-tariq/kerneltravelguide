@model KernelTravelGuides.Models.Resorts

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml" ;
    }

    <div class="container mt-5">
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <h1>Resorts Details</h1>
            <div class="col-md-12">

                <div class="card">
                    <div class="card-img">

                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img1)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />

                                </div>
                                <div class="carousel-item">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img2)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />
                                </div>
                                <div class="carousel-item">
                                    <img src="@("~/images/resortimg/" + Model.resorts_img3)" class=" d-block" asp-append-version="false" style="background-size:cover; width: 100%; height: 570px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <h2 class="mt-0 header-title">More Info about    @Html.DisplayFor(model => model.resorts_name)</h2>

                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.resorts_name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.resorts_name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.resorts_location)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.resorts_location)
                            </dd>
                           
                         
                            
                        </dl>
                    </div>
                </div>

            </div>
        </div>



    </div>
</div><!-- end col -->
</div>