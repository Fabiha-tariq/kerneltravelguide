@model IEnumerable<KernelTravelGuides.Models.Resorts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Resorts</h1>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">All Resorts</h4>

                        <div class="table-responsive">
                            <table class="table table-striped mb-0">

                                <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.resorts_name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.resorts_img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_img2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_img3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_status)
            </th>
           
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_name)
            </td>
           
            <td>
                    @*<a href="@("images/resortimg/" + item.resorts_img1)" target="_blank">*@
                        <img src="@("~/images/resortimg/" + item.resorts_img1)" asp-append-version="true" width="64px" />
                   @*</a>*@
            </td>
            <td>  
                @*<a href="@("images/resortimg/" + item.resorts_img2)" target="_blank">*@
                        <img src="@("~/images/resortimg/" + item.resorts_img2)" asp-append-version="true" width="64px" />
                  @*</a>*@
            </td>
            <td>

                    @*<a href="@("images/resortimg/" + item.resorts_img3)" target="_blank">*@
                        <img src="@("~/images/resortimg/" + item.resorts_img3)" asp-append-version="true" width="64px" />
                   @*</a>*@
            </td>
            <td>
                @if (item.resorts_status)
                                                {
                                                    <span class="btn btn-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="btn btn-danger">Unactive</span>

                                                }
            </td>
            
          
            <td>
                 <button type="button" class="btn btn-sm btn-warning ">
                                                    <a asp-action="Edit" asp-route-id="@item.resorts_id" class="text-white ">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </button>

                                                <button type="button" class="btn btn-sm btn-primary">
                                                    <a asp-action="Detail" asp-route-id="@item.resorts_id" class="text-white">
                                                        <i class="ion-android-book"></i>
                                                    </a>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger">
                                                    <a asp-action="Delete" asp-route-id="@item.resorts_id" class="text-white ">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </button>
            </td>
        </tr>
}
    </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->

        </div><!-- end row -->
    </div>
</div>


