@model IEnumerable<KernelTravelGuides.Models.Resorts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.resorts_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_img2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_img3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resorts_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.updated_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_img1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_img2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_img3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resorts_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updated_at)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.resorts_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.resorts_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.resorts_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
