@model KernelTravelGuides.Models.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>City</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.city_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.city_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.city_image)
        </dt>
        <dd class = "col-sm-10">
            <a href="@("images/cityimg/" + Model.city_image)" target="_blank">
                <img src="@("~/images/cityimg/" + Model.city_image)" asp-append-version="true" width="84px" />
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.city_status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.city_status)
            {
                <span class="btn btn-success">Active</span>
            }
            else
            {
                <span class="btn btn-danger">Unactive</span>

            }
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="city_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
