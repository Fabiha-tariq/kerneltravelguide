@model IEnumerable<KernelTravelGuides.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.hotel_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hotel_rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hotel_average)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hotel_image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hotel_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.hotel_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotel_rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotel_average)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotel_image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotel_status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.hotel_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.hotel_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.hotel_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
