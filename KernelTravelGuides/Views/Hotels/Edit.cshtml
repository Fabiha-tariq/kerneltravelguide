@model KernelTravelGuides.Models.Hotel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit Hotel</h1>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Edit Hotel</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="hotel_id" />
                            <div class="row">
                                <div class="form-group col-md-6">
                <label asp-for="hotel_name" class="control-label"></label>
                <input asp-for="hotel_name" class="form-control" />
                <span asp-validation-for="hotel_name" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="hotel_rating" class="control-label"></label>
                <input asp-for="hotel_rating" class="form-control" />
                <span asp-validation-for="hotel_rating" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="hotel_average" class="control-label"></label>
                <input asp-for="hotel_average" class="form-control" />
                <span asp-validation-for="hotel_average" class="text-danger"></span>
            </div>
                                <div class="form-group col-md-6">
                <label asp-for="hotel_image" class="control-label"></label>
                <input asp-for="main_image" class="form-control" accept="/images/hotelimg/*" />
                <span asp-validation-for="main_image" class="text-danger"></span>
            </div>
                                <div class="form-group form-check col-md-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="hotel_status" /> @Html.DisplayNameFor(model => model.hotel_status)
                </label>
            </div>
                    @*            <div class="form-group col-md-6">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>*@
                                <div class="form-group col-md-6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            </div>
        </form>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- end col -->

</div><!-- end row -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}