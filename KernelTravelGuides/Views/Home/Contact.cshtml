@model KernelTravelGuides.Models.Messages
@{
    ViewData["Title"] = "Contact Us Now";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero-wrap js-fullheight" style="background-image: url('https://cdn.offtheatlas.com/wp-content/uploads/2021/10/17031121/arcadian-spruce-woods-resort.jpg.webp');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">

                <p class="caps" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Travel to the any corner of the world, without going around in circles</p>
                <h1 data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Contact and Book Your Package Now</h1>

            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-no-pb contact-section">
    <div class="container">
        <div class="row d-flex contact-info">
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-map-signs"></span>
                    </div>
                    <h3 class="mb-2">Address</h3>
                    <p>Korangi Karachi, Sindh Pakistan, Earth</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-phone2"></span>
                    </div>
                    <h3 class="mb-2">Contact Number</h3>
                    <p><a href="tel://000000000000">+ 00 000 000000</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-paper-plane"></span>
                    </div>
                    <h3 class="mb-2">Email Address</h3>
                    <p><a href="mailto:kerneltravelguide.com">info@kerneltravelguide.com</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-globe"></span>
                    </div>
                    <h3 class="mb-2">Website</h3>
                    <p><a asp-controller="Home" asp-action="Index">kerneltravelguide.com</a></p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section contact-section">
    <div class="container">
        <div class="row block-9">
                <form action="Contact" enctype="multipart/form-data" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <label asp-for="messages_user_name" class="control-label"></label>
                        <input type="text" asp-for="messages_user_name" placeholder="Your Name" class="form-control" />
                        <span asp-validation-for="messages_user_name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="messages_content" class="control-label"></label>
                        <input type="text" asp-for="messages_content" placeholder="Enter Your Subject" class="form-control" />
                        <span asp-validation-for="messages_content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="messages_desc" class="control-label"></label>
                        <textarea type="text" asp-for="messages_desc" name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                        <span asp-validation-for="messages_desc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary py-3 px-5">
                    </div>
                </form>


        </div>
    </div>
</section>
