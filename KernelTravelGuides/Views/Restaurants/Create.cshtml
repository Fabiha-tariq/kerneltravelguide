@model KernelTravelGuides.Models.Restaurants

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Restaurants</h1>
<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Add Hotels</h4>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group  col-md-6">
                <label asp-for="restaurants_name" class="control-label"></label>
                <input asp-for="restaurants_name" class="form-control" />
                <span asp-validation-for="restaurants_name" class="text-danger"></span>
            </div>
                                <div class="form-group  col-md-6">
                <label asp-for="restaurants_location" class="control-label"></label>
                <input asp-for="restaurants_location" class="form-control" />
                <span asp-validation-for="restaurants_location" class="text-danger"></span>
            </div>
                                <div class="form-group  col-md-6">
                <label asp-for="restaurants_image" class="control-label"></label>
                <input asp-for="main_image" class="form-control" accept="/images/restaurantimg/*" />
                <span asp-validation-for="main_image" class="text-danger"></span>
            </div>
                                <div class="form-group form-check  col-md-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="restaurants_status" /> @Html.DisplayNameFor(model => model.restaurants_status)
                </label>
            </div>
           @* <div class="form-group">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>
            *@
                                <div class="form-group  col-md-6">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
       </div>
        </form>
                    </div>
                </div>

            </div>
        </div>
    </div><!-- end col -->

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
